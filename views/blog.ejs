<!DOCTYPE html>
<html>
<head>
	<title>My Realm</title>
    <link rel="stylesheet" type="text/css" href="/style/blog_style.css">
	<script src="/js/jquery-3.3.1.js"></script>
	<script src="/js/blog_script.js"></script>
</head>
<body>
	<div id = header>
		<p>Where Write Stuff!</p>
		<%-include('partials/tabs.ejs')%>
		
    </div>
    <div id="container">

    <button id="openForm" onclick="document.getElementById('id01').style.display='flex'" >Submit a new entry</button>
    
    <div id="id01" class="modal">
  
        <form class="modal-content animate" action="submit" method="POST">
          <div class="imgcontainer">
            <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>
          </div>
      
          <div class="container">
            <label ><b>Topic</b></label>
            <input id:"topic" type="text" placeholder="Topic" name="topic" required>
            <label><b>What's on your mind?</b></label>
            <input type="text" placeholder="Enter Password" name="subject" required>
              
            <button id="submit"type="submit">Submit</button>
            <button id="cancel" type="button" onclick="document.getElementById('id01').style.display='none'" >Cancel</button>
            
              
          </div>
      
          
        </form>
      </div>
   
      <div id="blogContainer">
        <% for( var i = blog.length - 1; i >= 0; i--) { %>
          <div class="blogBox">
            
              <h1><%= blog[i].topic %></h1>
              <h5><%= blog[i].date + " " + blog[i].time %></h5>
            <div id="contentBox">
              <p><%= blog[i].content %></p>
            </div>
            

          </div>
          <% } %>

      </div>  
      </div>
      
 
	
</body>
</html>